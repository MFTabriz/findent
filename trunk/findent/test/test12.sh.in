#!/bin/sh
rc=0
for flag in -h --help ; do
   ../src/findent "$flag" > help.try
   cmp -s help.ref help.try
   r=$?
   if [ $r -eq 0 ] ; then
      echo "$flag : works OK"
   else
      echo "$flag : works NOT OK, compare help.try and help.ref"
   fi
   rc=`expr $rc + $r` 
done

for flag in -H --manpage ; do
   ../src/findent "$flag" > manpage.try
   cmp -s manpage.ref manpage.try
   r=$?
   if [ $r -eq 0 ] ; then
      echo "$flag : works OK"
   else
      echo "$flag : works NOT OK, compare manpage.try and manpage.ref"
   fi
   rc=`expr $rc + $r` 
done

exit $rc
